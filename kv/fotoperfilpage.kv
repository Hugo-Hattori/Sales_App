<FotoPerfilPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 0.85,"top": 0.95}
            size_hint: 0.7, 0.1
            bold: True
            text: "Seleciona uma Foto de Perfil"

        # lista de imagens
        ScrollView:
            pos_hint: {"right": 0.9,"top": 0.85}
            size_hint: 0.8, 0.58
            GridLayout:
                cols: 3
                id: lista_fotos_perfil
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                spacing: 5, 5

        # botão voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                #posicao e size em relação ao novo FloatLayout
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("configpage")