#:include kv/homepage.kv
#:include kv/configpage.kv
#:include kv/adicionarvendaspage.kv
#:include kv/adicionarvendedorpage.kv
#:include kv/fotoperfilpage.kv
#:include kv/listagemvendedorespage.kv
#:include kv/todasvendaspage.kv
#:import utils kivy.utils

FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#001824")
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        pos_hint: {"right": 1, "top": 0.9}
        size_hint: 1, 0.2
        source: "icones/hash.png"
        id: foto_perfil
    ScreenManager:
        pos_hint: {"right": 1, "top": 0.7}
        size_hint: 1, 0.7
        id: screen_manager
        HomePage:
            name: "homepage"
            id: homepage
        ConfigPage:
            name: "configpage"
            id: configpage
        AdicionarVendasPage:
            name: "adicionarvendaspage"
            id: adicionarvendaspage
        AdicionarVendedorPage:
            name: "adicionarvendedorpage"
            id: adicionarvendedorpage
        FotoPerfilPage:
            name: "fotoperfilpage"
            id: fotoperfilpage
        ListagemVendedoresPage:
            name: "listagemvendedorespage"
            id: listagemvendedorespage
        TodasVendasPage:
            name: "todasvendaspage"
            id: todasvendaspage